<Window x:Class="Images2PDF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Images2PDF"
        mc:Ignorable="d"
        Title="Image2PDF" WindowState="Maximized">
    <Window.Resources>
        <ResourceDictionary>
            <Style TargetType="Button">
                <Setter Property="MinWidth" Value="100"/>
                <Setter Property="MinHeight" Value="40"/>
                <Setter Property="Margin" Value="10"/>
            </Style>
            <Style TargetType="CheckBox">
                <Setter Property="Margin" Value="5"/>
            </Style>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Margin="10">
            <StackPanel Orientation="Horizontal">
                <Label Content="Directory: "/>
                <Label Content="{Binding SourceDirectoryPath}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Folder Name: "/>
                <Label Content="{Binding SourceFolderName}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Quality: "/>
                <TextBox MinWidth="70" Text="{Binding Path=Quality}" VerticalAlignment="Center"/>
            </StackPanel>
            <CheckBox Content="Include Sub Directories?" IsChecked="{Binding Path=IncludeSubDirectories}"/>
            <CheckBox Content="Output PDF in same directory" IsChecked="{Binding OutputPDFInSameDirectory}"/>
            <Button Content="Select Folder" Click="SelectFolderClicked"/>
            <Button Content="Generate PDF" Command="{Binding GenerateOutputCommand}" CommandParameter="pdf"/>
            <Button Content="Compress Images" Command="{Binding GenerateOutputCommand}" CommandParameter="image"/>
        </StackPanel>
        <ScrollViewer Grid.Column="1">
            <TextBlock Text="{Binding Logs}" TextWrapping="Wrap"/>
        </ScrollViewer>
    </Grid>
</Window>
